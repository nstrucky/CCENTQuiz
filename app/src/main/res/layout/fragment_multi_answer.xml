<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/fragment_questions"
    tools:context="com.netjob.fraganimationpractice.MultiAnswerFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textview_question_multi"
            style="@style/question_text_style"
            />

        <View style="@style/line_separator" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkBoxA"
                style="@style/button_group_buttons"
                android:text="@string/button_answer_a" />

            <CheckBox
                android:id="@+id/checkBoxB"
                style="@style/button_group_buttons"
                android:text="@string/button_answer_b" />

            <CheckBox
                android:id="@+id/checkBoxC"
                style="@style/button_group_buttons"
                android:text="@string/button_answer_c" />

            <CheckBox
                android:id="@+id/checkBoxD"
                style="@style/button_group_buttons"
                android:text="@string/button_answer_d" />

            <ImageButton
                android:id="@+id/imageButton_multi_check"
                style="@style/button_style"
                android:src="@drawable/ic_done_white_24dp" />

            <ImageButton
                android:id="@+id/imageButton_multi_fragment"
                style="@style/button_style"
                android:onClick="buttonListener"
                android:src="@drawable/ic_forward_white_24dp" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
