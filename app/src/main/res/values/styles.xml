<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="single_answer_buttons">
        <item name="android:textSize">@dimen/question_fragment_text_size</item>
        <item name="android:padding">10dp</item>

    </style>

    <style name="line_separator">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_view_dimen</item>
        <item name="android:layout_marginBottom">@dimen/activity_horizontal_margin</item>
        <item name="android:background">@drawable/gradient</item>
    </style>

    <style name="button_style">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">16dp</item>
    </style>


</resources>
