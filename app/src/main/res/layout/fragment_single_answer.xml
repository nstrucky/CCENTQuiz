<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/fragment_questions"
    tools:context="com.netjob.fraganimationpractice.SingleAnswerFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textview_question_single"
            style="@style/question_text_style" />

        <View style="@style/line_separator" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <RadioGroup
                android:id="@+id/radio_group_single_answer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioButtonA"
                    style="@style/button_group_buttons"
                    android:text="@string/button_answer_a" />

                <RadioButton
                    android:id="@+id/radioButtonB"
                    style="@style/button_group_buttons"
                    android:text="@string/button_answer_b" />

                <RadioButton
                    android:id="@+id/radioButtonC"
                    style="@style/button_group_buttons"
                    android:text="@string/button_answer_c" />

                <RadioButton
                    android:id="@+id/radioButtonD"
                    style="@style/button_group_buttons"
                    android:text="@string/button_answer_d" />
            </RadioGroup>

            <ImageButton
                android:id="@+id/imageButton_single_check"
                style="@style/button_style"
                android:src="@drawable/ic_done_white_24dp" />

            <ImageButton
                android:id="@+id/imageButton_multi_fragment"
                style="@style/button_style"
                android:onClick="buttonListener"
                android:src="@drawable/ic_forward_white_24dp" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
