<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/fragment_questions"
    tools:context="com.netjob.fraganimationpractice.LandingFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:layout_centerInParent="true"
            android:background="@color/colorAccent"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:padding="@dimen/landing_text_padding"
            android:text="@string/title_screen_text"
            android:textColor="@color/colorPrimaryDark"
            android:background="@color/color_frag_background"
            android:textSize="@dimen/activity_title_screen_text_size"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorPrimary"
            android:onClick="buttonListener"
            android:padding="@dimen/button_padding"
            android:text="@string/activity_start_button"
            android:textColor="@android:color/white" />
    </RelativeLayout>

</FrameLayout>
